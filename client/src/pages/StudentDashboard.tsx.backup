// AI Report Button Component
function AIReportButton({ attemptId }: { attemptId: string }) {
  const [loading, setLoading] = useState(false);
  const [reportStatus, setReportStatus] = useState<string | null>(null);

  const checkReportStatus = async () => {
    try {
      const response = await api.get(`/reports/attempt/${attemptId}`);
      const reportData = response.data.data;
      // If report exists and has htmlContent, it's completed
      if (reportData && reportData.htmlContent) {
        setReportStatus('completed');
        return 'completed';
      } else {
        setReportStatus('none');
        return 'none';
      }
    } catch (error: any) {
      console.error('Error checking report status:', error);
      // If 404, report doesn't exist yet
      if (error.response?.status === 404) {
        setReportStatus('none');
      }
      return 'none';
    }
  };

  const handleViewReport = async () => {
    setLoading(true);
    try {
      const response = await api.get(`/reports/attempt/${attemptId}`);
      const reportData = response.data.data;

      if (reportData && reportData.htmlContent) {
        const newWindow = window.open('', '_blank');
        if (newWindow) {
          newWindow.document.write(reportData.htmlContent);
          newWindow.document.close();
        }
      } else {
        alert('AI 보고서가 아직 생성되지 않았습니다.');
      }
    } catch (error: any) {
      console.error('Error fetching report:', error);
      if (error.response?.status === 404) {
        alert('AI 보고서가 아직 생성되지 않았습니다. 잠시 후 다시 시도해주세요.');
      } else {
        alert(error.response?.data?.message || 'AI 보고서를 불러오는데 실패했습니다.');
      }
    } finally {
      setLoading(false);
    }
  };

  // Check report status on mount
  useEffect(() => {
    checkReportStatus();
  }, [attemptId]);

  if (reportStatus === 'completed') {
    return (
      <Button
        onClick={handleViewReport}
        disabled={loading}
        className="bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 min-w-[140px]"
      >
        {loading ? (
          <>
            <Loader2 className="w-4 h-4 mr-2 animate-spin" />
            로딩 중...
          </>
        ) : (
          <>
            <ExternalLink className="w-4 h-4 mr-2" />
            AI 보고서 보기
          </>
        )}
      </Button>
    );
  }

  return null;
}

export default function StudentDashboard({ user }: { user: User }) {
  const queryClient = useQueryClient();
  const [activeSection, setActiveSection] = useState<MenuSection>('dashboard');
  const [sidebarOpen, setSidebarOpen] = useState(true);
  const [selectedExam, setSelectedExam] = useState<any>(null);
  const [answers, setAnswers] = useState<Record<number, number>>({});
  const [activeExamTab, setActiveExamTab] = useState<ExamTab>('available');

  const logoutMutation = useMutation({
    mutationFn: async () => {
      await api.post('/auth/logout');
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['auth', 'me'] });
    },
  });

  // Fetch distributed exams
  const { data: examsData } = useQuery({
    queryKey: ['student', 'exams'],
    queryFn: async () => {
      const res = await api.get('/my-exams');
      return res.data;
    },
  });

  // Remove duplicate exams (same examId) - keep the latest distribution
  const exams = (() => {
    const rawExams = examsData?.data || [];
    const examMap = new Map<string, any>();

    rawExams.forEach((item: any) => {
      const examId = item.exam.id;
      const existing = examMap.get(examId);

      if (!existing) {
        examMap.set(examId, item);
      } else {
        // Keep the one with the latest startDate
        const existingDate = new Date(existing.distribution.startDate);
        const currentDate = new Date(item.distribution.startDate);

        if (currentDate > existingDate) {
          examMap.set(examId, item);
        }
      }
    });

    return Array.from(examMap.values());
  })();

  const startExamMutation = useMutation({
    mutationFn: async (distributionId: string) => {
      // Start exam attempt
      const attemptRes = await api.post('/exam-attempts', { distributionId });

      // Get exam details with questions
      const examRes = await api.get(`/my-exams/${distributionId}`);

      return {
        attempt: attemptRes.data.data,
        examData: examRes.data.data,
      };
    },
    onSuccess: (data) => {
      queryClient.invalidateQueries({ queryKey: ['student', 'exams'] });
      // Properly structure the exam data
      setSelectedExam({
        id: data.attempt.id,
        exam: data.examData.exam,
        distribution: data.examData.distribution,
        attempt: data.attempt
      });
      setActiveSection('exams');
    },
    onError: (error: any) => {
      alert(error.response?.data?.message || '시험 시작에 실패했습니다.');
    },
  });

  const submitExamMutation = useMutation({
    mutationFn: async ({ attemptId, answers }: { attemptId: string; answers: Record<number, number> }) => {
      const res = await api.post(`/exam-attempts/${attemptId}/submit`, { answers });
      return res.data;
    },
    onSuccess: () => {
      alert('시험이 제출되었습니다.');
      queryClient.invalidateQueries({ queryKey: ['student', 'exams'] });
      setSelectedExam(null);
      setAnswers({});
      setActiveSection('results');
    },
    onError: (error: any) => {
      alert(error.response?.data?.message || '시험 제출에 실패했습니다.');
    },
  });

  const handleAnswerChange = (questionNumber: number, choiceIndex: number) => {
    setAnswers((prev) => ({ ...prev, [questionNumber]: choiceIndex }));
  };

  const handleSubmitExam = () => {
    if (!selectedExam) return;

    if (confirm('시험을 제출하시겠습니까? 제출 후에는 수정할 수 없습니다.')) {
      submitExamMutation.mutate({ attemptId: selectedExam.id, answers });
    }
  };

  // Calculate statistics from completed exams
  const completedExams = exams?.filter((e: any) => e.status === 'completed' && e.attempt?.score !== undefined) || [];
  const scores = completedExams.map((e: any) => e.attempt.score);
  const averageScore = scores.length > 0 ? Math.round(scores.reduce((a: number, b: number) => a + b, 0) / scores.length) : 0;
  const highestScore = scores.length > 0 ? Math.max(...scores) : 0;
  const lowestScore = scores.length > 0 ? Math.min(...scores) : 0;

  // Prepare chart data for score trend
  const chartData = {
    labels: completedExams.map((e: any) => e.exam.title.length > 15 ? e.exam.title.substring(0, 15) + '...' : e.exam.title),
    datasets: [
      {
        label: '점수',
        data: scores,
        fill: true,
        borderColor: 'rgb(147, 51, 234)',
        backgroundColor: 'rgba(147, 51, 234, 0.1)',
        tension: 0.4,
        pointBackgroundColor: 'rgb(147, 51, 234)',
        pointBorderColor: '#fff',
        pointBorderWidth: 2,
        pointRadius: 6,
        pointHoverRadius: 8,
      },
    ],
  };

  const chartOptions = {
    responsive: true,
    maintainAspectRatio: false,
    plugins: {
      legend: {
        display: false,
      },
      tooltip: {
        backgroundColor: 'rgba(0, 0, 0, 0.8)',
        padding: 12,
        titleColor: '#fff',
        bodyColor: '#fff',
        borderColor: 'rgb(147, 51, 234)',
        borderWidth: 1,
      },
    },
    scales: {
      y: {
        beginAtZero: true,
        max: 100,
        grid: {
          color: 'rgba(0, 0, 0, 0.05)',
        },
        ticks: {
          callback: function(value: any) {
            return value + '점';
          },
        },
      },
      x: {
        grid: {
          display: false,
        },
      },
    },
  };

  const menuItems = [
    { id: 'dashboard' as MenuSection, label: '대시보드', icon: LayoutDashboard },
    { id: 'exams' as MenuSection, label: '내 시험', icon: FileText },
    { id: 'results' as MenuSection, label: '성적 조회', icon: BarChart3 },
  ];

  return (
    <div className="flex h-screen bg-gray-50">
      {/* Sidebar */}
      <aside
        className={`${
          sidebarOpen ? 'w-64' : 'w-0'
        } bg-gradient-to-b from-purple-600 to-indigo-700 text-white transition-all duration-300 overflow-hidden`}
      >
        <div className="p-6">
          <div className="flex items-center gap-3 mb-8">
            <Home className="w-8 h-8" />
            <div>
              <h1 className="text-xl font-bold">ALLGA 학생</h1>
              <p className="text-sm text-purple-200">학습 관리 시스템</p>
            </div>
          </div>

          <div className="flex items-center gap-3 mb-6 p-3 bg-white/10 rounded-lg">
            <UserCircle className="w-10 h-10" />
            <div>
              <p className="font-semibold">{user.name}</p>
              <p className="text-xs text-purple-200">학생</p>
            </div>
          </div>

          <nav className="space-y-2">
            {menuItems.map((item) => {
              const Icon = item.icon;
              return (
                <button
                  key={item.id}
                  onClick={() => setActiveSection(item.id)}
                  className={`w-full flex items-center gap-3 px-4 py-3 rounded-lg transition-colors ${
                    activeSection === item.id
                      ? 'bg-white text-purple-600 font-semibold'
                      : 'hover:bg-white/10'
                  }`}
                >
                  <Icon className="w-5 h-5" />
                  {item.label}
                </button>
              );
            })}
          </nav>

          <div className="mt-8">
            <Button
              onClick={() => logoutMutation.mutate()}
              variant="outline"
              className="w-full border-white/30 text-white hover:bg-white/10"
            >
              <LogOut className="w-4 h-4 mr-2" />
              로그아웃
            </Button>
          </div>
        </div>
      </aside>

      {/* Main Content */}
      <div className="flex-1 flex flex-col overflow-hidden">
        {/* Header */}
        <header className="bg-white shadow-sm z-10">
          <div className="flex items-center justify-between px-6 py-4">
            <div className="flex items-center gap-4">
              <Button
                variant="ghost"
                size="sm"
                onClick={() => setSidebarOpen(!sidebarOpen)}
