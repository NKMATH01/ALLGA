                    </CardTitle>
                  </CardHeader>
                  <CardContent className="p-6">
                    {/* Tabs */}
                    <div className="flex gap-2 mb-6 border-b border-gray-200">
                      <button
                        onClick={() => setActiveExamTab('available')}
                        className={`px-4 py-2 font-medium transition-colors ${
                          activeExamTab === 'available'
                            ? 'text-purple-600 border-b-2 border-purple-600'
                            : 'text-gray-600 hover:text-gray-800'
                        }`}
                      >
                        배포된 시험
                      </button>
                      <button
                        onClick={() => setActiveExamTab('completed')}
                        className={`px-4 py-2 font-medium transition-colors ${
                          activeExamTab === 'completed'
                            ? 'text-purple-600 border-b-2 border-purple-600'
                            : 'text-gray-600 hover:text-gray-800'
                        }`}
                      >
                        완료된 시험
                      </button>
                    </div>

                    {/* Available/In Progress Tab */}
                    {activeExamTab === 'available' && (
                      <>
                        {exams && exams.filter((e: any) => e.status === 'available' || e.status === 'in_progress').length > 0 ? (
                          <div className="grid gap-4">
                            {exams.filter((e: any) => e.status === 'available' || e.status === 'in_progress').map((item: any) => (
                              <div
                                key={item.distribution.id}
                                className="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow"
                              >
                                <div className="flex justify-between items-start">
                                  <div className="flex-1">
                                    <h3 className="text-lg font-semibold text-gray-900">{item.exam.title}</h3>
                                    <p className="text-sm text-gray-600 mt-1">{item.exam.subject}</p>
                                    <div className="flex gap-4 mt-2 text-sm text-gray-500">
                                      <span>문항: {item.exam.totalQuestions}개</span>
                                      <span>배점: {item.exam.totalScore}점</span>
                                    </div>
                                    <div className="flex gap-4 mt-2 text-sm text-gray-500">
                                      <span>
                                        시작일: {new Date(item.distribution.startDate).toLocaleDateString('ko-KR')}
                                      </span>
                                      <span>
                                        종료일: {new Date(item.distribution.endDate).toLocaleDateString('ko-KR')}
                                      </span>
                                    </div>
                                  </div>
                                  <div className="ml-4">
                                    {item.status === 'in_progress' ? (
                                      <Button
                                        onClick={async () => {
                                          const examRes = await api.get(`/my-exams/${item.distribution.id}`);
                                          setSelectedExam({ ...item.attempt, ...examRes.data.data });
                                        }}
                                        className="bg-gradient-to-r from-orange-500 to-red-600 hover:from-orange-600 hover:to-red-700"
                                      >
                                        계속하기
                                      </Button>
                                    ) : (
                                      <Button
                                        onClick={() => startExamMutation.mutate(item.distribution.id)}
                                        className="bg-gradient-to-r from-purple-500 to-indigo-600 hover:from-purple-600 hover:to-indigo-700"
                                      >
                                        시험 시작
                                      </Button>
                                    )}
                                  </div>
                                </div>
                              </div>
                            ))}
                          </div>
                        ) : (
                          <div className="text-center py-12">
                            <FileText className="w-16 h-16 mx-auto text-gray-300 mb-4" />
                            <p className="text-gray-500">배포된 시험이 없습니다.</p>
                          </div>
                        )}
                      </>
                    )}

                    {/* Completed Tab */}
                    {activeExamTab === 'completed' && (
                      <>
                        {exams && exams.filter((e: any) => e.status === 'completed').length > 0 ? (
                          <div className="grid gap-4">
                            {exams.filter((e: any) => e.status === 'completed').map((item: any) => (
                              <div
                                key={item.distribution.id}
                                className="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow bg-green-50"
                              >
                                <div className="flex justify-between items-start">
                                  <div className="flex-1">
                                    <h3 className="text-lg font-semibold text-gray-900">{item.exam.title}</h3>
                                    <p className="text-sm text-gray-600 mt-1">{item.exam.subject}</p>
                                    <div className="flex gap-4 mt-2 text-sm text-gray-500">
                                      <span>문항: {item.exam.totalQuestions}개</span>
                                      <span>배점: {item.exam.totalScore}점</span>
                                    </div>
                                    <div className="flex gap-4 mt-2 text-sm text-gray-500">
                                      <span>
                                        제출일: {item.attempt?.submittedAt ? new Date(item.attempt.submittedAt).toLocaleDateString('ko-KR') : '-'}
                                      </span>
                                    </div>
                                  </div>
                                  <div className="text-center ml-4">
                                    <div className="px-4 py-2 bg-green-600 text-white rounded-lg font-semibold mb-2">
                                      제출 완료
                                    </div>
                                    {item.attempt?.score !== undefined && (
                                      <>
                                        <div className="text-2xl font-bold text-green-600">
                                          {item.attempt.score}점
                                        </div>
                                        {item.attempt?.grade && (
                                          <div className="text-sm text-gray-600 mt-1">
                                            {item.attempt.grade}등급
                                          </div>
                                        )}
                                      </>
                                    )}
                                  </div>
                                </div>
                              </div>
                            ))}
                          </div>
                        ) : (
                          <div className="text-center py-12">
                            <FileText className="w-16 h-16 mx-auto text-gray-300 mb-4" />
                            <p className="text-gray-500">완료된 시험이 없습니다.</p>
                          </div>
                        )}
                      </>
                    )}
                  </CardContent>
                </Card>
              )}
            </div>
          )}

          {activeSection === 'results' && (
            <div className="space-y-6">
              <Card className="border-purple-200">
                <CardHeader className="bg-gradient-to-r from-purple-50 to-indigo-50">
                  <CardTitle className="text-xl font-bold text-gray-800 flex items-center gap-2">
                    <BarChart3 className="w-5 h-5 text-purple-600" />
                    내 성적
                  </CardTitle>
                </CardHeader>
                <CardContent className="p-6">
                  {exams && exams.filter((e: any) => e.status === 'completed').length > 0 ? (
                    <div className="space-y-4">
                      {exams
                        .filter((e: any) => e.status === 'completed')
                        .map((item: any) => (
                          <div
                            key={item.distribution.id}
                            className="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow bg-white"
                          >
                            <div className="flex justify-between items-start">
                              <div className="flex-1">
                                <h3 className="text-xl font-bold text-gray-900">{item.exam.title}</h3>
                                <p className="text-sm text-gray-600 mt-1">{item.exam.subject}</p>

                                <div className="grid grid-cols-2 md:grid-cols-4 gap-4 mt-4">
                                  <div className="bg-purple-50 rounded-lg p-3">
                                    <p className="text-xs text-gray-600 mb-1">점수</p>
                                    <p className="text-2xl font-bold text-purple-600">
                                      {item.attempt?.score || 0}점
                                    </p>
                                  </div>

                                  <div className="bg-indigo-50 rounded-lg p-3">
                                    <p className="text-xs text-gray-600 mb-1">등급</p>
                                    <p className="text-2xl font-bold text-indigo-600">
                                      {item.attempt?.grade || '-'}등급
                                    </p>
                                  </div>

                                  <div className="bg-blue-50 rounded-lg p-3">
                                    <p className="text-xs text-gray-600 mb-1">정답 수</p>
                                    <p className="text-2xl font-bold text-blue-600">
                                      {item.attempt?.correctCount || 0}/{item.exam.totalQuestions}
                                    </p>
                                  </div>

                                  <div className="bg-green-50 rounded-lg p-3">
                                    <p className="text-xs text-gray-600 mb-1">정답률</p>
                                    <p className="text-2xl font-bold text-green-600">
                                      {item.exam.totalQuestions > 0
                                        ? Math.round(((item.attempt?.correctCount || 0) / item.exam.totalQuestions) * 100)
                                        : 0}%
                                    </p>
                                  </div>
                                </div>

                                <div className="mt-4 text-sm text-gray-500">
                                  <span>
                                    제출일: {item.attempt?.submittedAt
                                      ? new Date(item.attempt.submittedAt).toLocaleString('ko-KR')
                                      : '-'}
                                  </span>
                                </div>
                              </div>

                              <div className="ml-6 flex flex-col gap-2">
                                {item.attempt?.id && (
                                  <AIReportButton attemptId={item.attempt.id} />
                                )}
                              </div>
                            </div>
                          </div>
                        ))}
                    </div>
                  ) : (
                    <div className="text-center py-12">
                      <BarChart3 className="w-16 h-16 mx-auto text-gray-300 mb-4" />
                      <p className="text-gray-500">제출한 시험이 없습니다.</p>
                    </div>
                  )}
                </CardContent>
              </Card>
            </div>
          )}
        </main>
      </div>
    </div>
  );
}
